import Searcher from "../components/Search.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro LMDB</title>
  </head>
  <body>
    <div id="app">
      <nav>
        <Searcher />
      </nav>
      <slot />
